{
  "name": "dewicom-desktop",
  "version": "1.1.0",
  "description": "DewiCom Desktop - Application PTT cross-platform",
  "author": {
    "name": "dewiweb",
    "email": "dewi@dewicom.app"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dewiweb/dewicom.git"
  },
  "main": "main.js",
  "scripts": {
    "start": "NODE_EXTRA_CA_CERTS=$(mkcert -CAROOT)/rootCA.pem electron .",
    "sync-public": "node -e \"const fs=require('fs'),path=require('path');const src=path.join(__dirname,'../dewicom/public');const dst=path.join(__dirname,'public');if(fs.existsSync(src)){fs.cpSync(src,dst,{recursive:true});console.log('public/ synced from dewicom/')}\"",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --linux --mac --win"
  },
  "build": {
    "appId": "com.dewicom.desktop",
    "productName": "DewiCom",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "public/**"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "AudioVideo"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "express": "^5.2.1",
    "socket.io": "^4.8.3"
  }
}
